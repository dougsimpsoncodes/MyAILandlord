{
  "name": "myailandlord",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "clear": "expo r -c",
    "doctor": "expo doctor",
    "typecheck": "npx tsc --noEmit",
    "security:audit": "./scripts/security-audit.sh",
    "security:check-secrets": "git log --all -S 'APIKey\\|secret\\|password' --oneline",
    "validate:env": "node -e \"console.log('✅ Environment validation:', process.env.EXPO_PUBLIC_CLERK_PUBLISHABLE_KEY ? 'Clerk configured' : '❌ Missing Clerk key', process.env.EXPO_PUBLIC_SUPABASE_URL ? 'Supabase configured' : '❌ Missing Supabase config')\"",
    "deps:audit": "npm audit --audit-level=high",
    "deps:update": "npx expo install --fix",
    "lint:ts": "npx tsc --noEmit --strict",
    "prebuild:ios": "npm run typecheck && npm run security:audit",
    "prebuild:android": "npm run typecheck && npm run security:audit",
    "scan:secrets": "gitleaks detect --redact --config .gitleaks.toml --report-path .reports/gitleaks.json",
    "test:rls": "node scripts/ci/rls-smoke.js",
    "scan:secrets:all": "gitleaks detect --no-git --source . --redact --config .gitleaks.toml --report-path .reports/gitleaks-all.json"
  },
  "dependencies": {
    "@clerk/clerk-expo": "^2.14.12",
    "@expo/metro-runtime": "~5.0.4",
    "@expo/vector-icons": "^14.1.0",
    "@react-native-async-storage/async-storage": "^2.1.2",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/native-stack": "^7.3.21",
    "@supabase/supabase-js": "^2.52.1",
    "base64-arraybuffer": "^1.0.2",
    "expo": "~53.0.20",
    "expo-auth-session": "^6.2.1",
    "expo-barcode-scanner": "^13.0.1",
    "expo-image-picker": "~16.1.4",
    "expo-secure-store": "^14.2.3",
    "expo-speech": "^13.1.7",
    "expo-status-bar": "~2.2.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-safe-area-context": "^5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0",
    "expo-image-manipulator": "~13.1.7"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/jest": "^30.0.0",
    "@types/react": "~19.0.10",
    "typescript": "~5.8.3"
  },
  "private": true
}